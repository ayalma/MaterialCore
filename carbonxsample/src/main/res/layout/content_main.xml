<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ayalma.com.materialxsample.MainActivity"
    tools:showIn="@layout/activity_main">


    <mat.widget.LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:foregroundGravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <mat.widget.CheckBox

            android:text="check me please"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <mat.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/material_white"
            android:clickable="true"
            android:padding="4dp"
            android:text="hello this is text view in mat widget"
            app:material_cornerRadius="4dp"
            app:material_elevation="4dp"
            app:material_rippleHotspot="false"
            app:material_stroke="@color/colorAccent"
            app:material_strokeWidth="2dp" />

        <mat.widget.TestUi
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"

            android:background="#ffffff"
            app:material_cornerRadius="5dp"
            app:material_elevation="8dp"
            app:material_elevationShadowColor="@color/material_red_700" />
    </mat.widget.LinearLayout>

</android.support.constraint.ConstraintLayout>
